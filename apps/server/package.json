{
  "name": "server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "bun run --hot src/index.ts",
    "start": "bun run dist/index.js",
    "seed:users": "bun run src/scripts/seed-users.ts",
    "seed:assessments": "bun run src/scripts/seed-assessments.ts"
  },
  "dependencies": {
    "hono": "^4.8.2",
    "@orpc/server": "catalog:",
    "@orpc/openapi": "catalog:",
    "@orpc/zod": "catalog:",
    "better-auth": "catalog:",
    "ai": "catalog:",
    "@ai-sdk/google": "catalog:",
    "dotenv": "catalog:",
    "zod": "catalog:",
    "@idna/api": "workspace:*",
    "@idna/auth": "workspace:*",
    "@idna/db": "workspace:*"
  },
  "optionalDependencies": {
    "@aws-sdk/client-s3": "^3.676.0",
    "@aws-sdk/s3-request-presigner": "^3.676.0",
    "@ai-sdk/openai": "^2.0.13",
    "@ai-sdk/anthropic": "^2.0.13"
  },
  "devDependencies": {
    "typescript": "catalog:",
    "@types/bun": "^1.2.6",
    "tsdown": "catalog:"
  }
}
